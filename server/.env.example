# Server environment variables
# Copy this file to .env and fill in values

# MongoDB connection string (must include database name)
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Server port (Render provides PORT automatically)
PORT=5000

# Google AI Studio API key
GEMINI_API_KEY=

# Preferred Gemini model (optional; fallback is built-in)
# Common options: gemini-1.5-pro, gemini-1.5-flash, gemini-1.0-pro
GEMINI_MODEL=gemini-1.5-pro

# Frontend URL(s) for CORS in production (comma-separated)
# e.g., https://your-frontend.vercel.app,https://your-preview.vercel.app
FRONTEND_URLS=

# Optional: allow regex for preview URLs (Vercel)
# Example: ^https://.*\.vercel\.app$
CORS_ALLOW_ORIGIN_REGEX=
